<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.Details1">

    <ImageView
        android:id="@+id/d_Poster"
        android:layout_width="307dp"
        android:layout_height="281dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/d_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/d_Poster"
        app:layout_constraintVertical_bias="0.121" />

    <TextView
        android:id="@+id/d_Description"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/d_Name"
        app:layout_constraintTop_toBottomOf="@+id/d_Name" />

    <Button
        android:id="@+id/d_Button"
        android:layout_width="36dp"
        android:layout_height="38dp"
        android:layout_marginTop="25dp"
        android:background="?android:attr/selectableItemBackground"
        android:padding="0dp"
        app:backgroundTint="@color/white"
        app:icon="@drawable/ic_baseline_play_circle_filled_24"
        app:iconPadding="0dp"
        app:iconSize="30dp"
        app:iconTint="#EB0B0B"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@+id/d_Name"
        app:layout_constraintTop_toBottomOf="@+id/d_Poster" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="42dp"
        android:layout_height="27dp"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="20dp"
        android:background="#CDB03B"
        android:padding="2dp"
        android:text="IMDB"
        app:layout_constraintStart_toStartOf="@+id/d_Description"
        app:layout_constraintTop_toBottomOf="@+id/d_Description" />

    <TextView
        android:id="@+id/d_Rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="22dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/d_Description" />

    <ImageButton
        android:id="@+id/fav"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:padding="2dp"
        android:src="@drawable/favourite_not"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/d_Button"
        app:layout_constraintHorizontal_bias="0.94"
        app:layout_constraintStart_toEndOf="@+id/d_Name"
        app:layout_constraintTop_toBottomOf="@+id/d_Poster"
        app:layout_constraintVertical_bias="0.124" />

</androidx.constraintlayout.widget.ConstraintLayout>